@model IEnumerable<InventarioStudioDAO.Inventario>

@{
    ViewBag.Title = "Inventario";
}

<div>
    <h2 class="text-center">Inventario</h2>

    @using (Html.BeginForm())
    {
        <div class="col-md-12">
            <div class="text-left col-md-6">
                @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-primary" })
            </div>
            <div class="text-right col-md-6">
                @Html.TextBox("busqueda")

                <input type="submit" value="Buscar" id="busqueda" class="btn btn-info" />
                <button type="button" class="btn" onclick="limpiaCampo()">Limpiar</button>
            </div>
        </div>
    }
    <br />
    <br />

    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procesador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscoDuro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sala.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo.Nombre)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Procesador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscoDuro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ram)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Serial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sala.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")


        <script>
            function limpiaCampo() {
                //Utilizamos el elemento al que hacemos focus para borrar el campo.
                document.getElementById("busqueda").value = "";
            }
        </script>
    }

</div>