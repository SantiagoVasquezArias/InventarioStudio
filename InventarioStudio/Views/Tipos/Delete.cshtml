@model InventarioStudioDAO.Tipo

@{
    ViewBag.Title = "Eliminar tipo";
}

<div class="container">
    <h2 class="text-center alert-danger">Eliminar</h2>


    <div>
       
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            @*<dt>
                @Html.DisplayNameFor(model => model.EsComputador)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EsComputador)
            </dd>*@
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Salir", "Index", new { }, new { @class = "btn btn-info" })
                    <input type="submit" value="Elimiar" class="btn btn-danger" onclick="return ConfirmacionMensaje()" />
                </div>
            </div>
        }
    </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")


            <script>
                function ConfirmacionMensaje() {

                    return confirm("Esta seguro que desea eliminar el tipo de inventario.");

                };
            </script>

        }

</div>
